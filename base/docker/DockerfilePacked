# Ballerina version.
ARG BALLERINA_VERSION

FROM ballerina/ballerina:${BALLERINA_VERSION}

USER root

RUN bal pull ballerinax/postgresql \
    && bal pull ballerinax/mysql \
    && bal pull ballerinax/redis \
    && bal pull ballerinax/kafka \
    && bal pull ballerina/sql:1.13.2 \
    && bal pull ballerina/crypto:2.7.2
